# Database Configuration
DATABASE_URL=sqlite:///./jobs.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/job_automator

# Application Settings
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Job Matching Configuration
MATCH_THRESHOLD=80
AUTO_APPLY_ENABLED=True
MAX_RESUME_SIZE=5242880

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Job Scraping Configuration
JOB_SCRAPE_INTERVAL=3600
LINKEDIN_API_KEY=your-api-key
INDEED_API_KEY=your-api-key

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Job Automator

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
